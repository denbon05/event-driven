{
  "name": "bastion",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bastion/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/bastion",
        "main": "apps/bastion/src/main.ts",
        "tsConfig": "apps/bastion/tsconfig.app.json",
        "assets": [
          "apps/bastion/src/assets"
        ],
        "webpackConfig": "apps/bastion/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "bastion:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "bastion:build:development"
        },
        "production": {
          "buildTarget": "bastion:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/bastion/jest.config.ts"
      }
    }
  },
  "tags": []
}